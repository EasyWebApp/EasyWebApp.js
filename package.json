{
  "name": "easywebapp",
  "version": "5.0.0",
  "description": "Light-weight Web application engine based on Web components API & ECMAScript 6+",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./source/ ./test/",
    "precommit": "npm run lint",
    "compile": "babel source -d build/Release",
    "build": "npm run compile  &&  esdoc",
    "help": "web-server docs/ -o",
    "test": "mocha -r babel-register -r should --recursive --no-timeouts -c --inline-diffs --exit",
    "debug": "npm test -- --inspect-brk"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyWebApp/EasyWebApp.git"
  },
  "keywords": [
    "WebApp",
    "Web-component",
    "SPA",
    "ECMAScript"
  ],
  "author": "shiy007@qq.com",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/EasyWebApp/EasyWebApp/issues"
  },
  "homepage": "https://github.com/EasyWebApp/EasyWebApp#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-register": "^6.26.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.19.1",
    "husky": "^0.14.3",
    "jsdom": "^11.10.0",
    "koapache": "^0.2.1",
    "mocha": "^5.1.1",
    "should": "^13.2.1"
  },
  "esdoc": {
    "source": "./source",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "test": {
            "source": "./test",
            "interfaces": [
              "describe",
              "it"
            ],
            "includes": [
              "\\.js$"
            ]
          }
        }
      }
    ]
  },
  "babel": {
    "presets": [
      "es2016",
      "es2017"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
