{
    "opts":         {
        "recurse":        true,
        "readme":         "ReadMe.md",
        "template":       "node_modules/docdash",
        "destination":    "docs/API/",
        "verbose":        true
    },
    "templates":    {
        "default":    {
            "includeDate":    false
        }
    },
    "plugins":      [
        "plugins/markdown", "node_modules/jsdoc-inheritance-diagram"
    ],
    "markdown":     {
        "hardwrap":    true
    }
}
